mixin checkbox(className,idName)
    label.check(class=className)
        input(type="checkbox").check__input.check__input--main(id=idName)
        span.check__box

mixin table-row(className , star , text)
        .table__row
            .table__row-list
                +checkbox('check--right')
                p.table__text=text
                if star
                    button.table__button-star.js-star
                        <svg width="16" height="17" viewBox="0 0 16 17" fill="#fff" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M8 13.6667L3.33333 16L4.30145 10.9795L1 7.44444L5.71417 6.6316L8 2L10.2858 6.6316L15 7.44444L11.6986 10.9795L12.6667 16L8 13.6667Z" stroke=""/>
                        </svg>
                button.table__but-toggle(class=className)
            .table__last
                p 2750

mixin row-date(className, ...items)
  ul.table__list-date(class=className)
    each item in items
      li.table__date= item


mixin data(data, className)
    .date-list
        each item in data.items
            .date-list__item(class=className)
                span.date-list__number !{item.number}
                if item.description
                    span.date-list__description !{item.description}
                if item.wellup   
                    span.date-list__wellup !{item.wellup}
                if item.wellduwn   
                    span.date-list__wellduwn !{item.wellduwn}
                if item.weltext
                    span.date-list__weltext !{item.weltext}
                
